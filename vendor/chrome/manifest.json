{
  "manifest_version": 2,
  "name": "Zipkin Chrome Extension",
  "description": "Lets you trigger Zipkin traces from the browser, while using your application",
  "version": "{{ version }}",
  "devtools_page": "devtools.html",
  "background": {
    "scripts": ["background.bundle.js"],
    "persistent": true
  },
  "permissions": [
    "activeTab",
    "webRequest",
    "webRequestBlocking",
    "storage",
    "http://*/",
    "https://*/"
  ]
}
